FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 8;
method hierarchical;
hierarchicalCoeffs
{
    n               (2 4 1);
    delta           0.0001;
    order           xyz;
}
