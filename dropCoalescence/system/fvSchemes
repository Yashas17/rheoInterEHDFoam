FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    
    div(Sum(tau))                 Gauss linear; 
    div(eta*alpha*dev2(T(gradU))) Gauss linear;
    div(grad(U))                  Gauss linear; 

    div(MST)                      Gauss linear; 
    
    div(rhoPhi,U)                 GaussDefCmpw cubista;
    div(phi,theta.water)          GaussDefCmpw cubista;
    div(phi,theta.oil)            GaussDefCmpw cubista;
    
    div(phi,alpha)                Gauss vanLeer01;
    div(phirb,alpha)              Gauss interfaceCompression;

    div(phi,rhoE)                 Gauss linear;
}

laplacianSchemes
{
    default                       Gauss linear corrected;
}

interpolationSchemes
{
    default        linear;      
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    p_rgh;
    pcorr;
    alpha;
    rhoE;
}
